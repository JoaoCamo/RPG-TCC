{
  "format": {
    "type": "json_schema",
    "name": "story",
    "strict": true,
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "dialogue": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "game_state": {
                "type": "integer",
                "enum": [0, 1]
              }
            },
            "required": ["text", "game_state"],
            "additionalProperties": false
          }
        }
      },
      "required": ["name", "dialogue", "options"],
      "additionalProperties": false
    }
  }
}