{
    "format":{
        "type":"json_schema",
        "name":"item",
        "strict":true,
        "schema":{
            "type":"object",
            "properties":{
                "itemType":{
                    "type":"object",
                    "properties":{
                        "itemType":{
                            "anyOf":[
                                {
                                    "type":"object",
                                    "properties":{
                                        "itemType":{
                                            "type":"string",
                                            "const":"weapon"
                                        },
                                        "rawDamage":{
                                            "type":"integer"
                                        },
                                        "dicesToRoll":{
                                            "type":"integer"
                                        }
                                    },
                                    "required":[
                                        "itemType",
                                        "rawDamage",
                                        "dicesToRoll"
                                    ],
                                    "additionalProperties":false
                                },
                                {
                                    "type":"object",
                                    "properties":{
                                        "itemType":{
                                            "type":"string",
                                            "const":"armor"
                                        },
                                        "armorValue":{
                                            "type":"integer"
                                        },
                                        "armorType":{
                                            "type": "integer",
                                            "enum":[
                                                "Chest",
                                                "Shield"
                                            ]
                                        }
                                    },
                                    "required":[
                                        "itemType",
                                        "armorValue",
                                        "armorType"
                                    ],
                                    "additionalProperties":false
                                }
                            ]
                        }
                    },
                    "required":[
                        "itemType"
                    ],
                    "additionalProperties":false
                },
                "itemName":{
                    "type":"string"
                },
                "itemDescription":{
                    "type":"string"
                },
                "itemWeight":{
                    "type":"integer"
                },
                "itemValue":{
                    "type":"integer"
                },
                "itemRarity":{
                    "type": "string",
                    "enum":[
                        "Common",
                        "Uncommon",
                        "Rare",
                        "Epic",
                        "Legendary"
                    ]
                }
            },
            "required":[
                "itemType",
                "itemName",
                "itemDescription",
                "itemWeight",
                "itemValue",
                "itemRarity"
            ],
            "additionalProperties":false
        }
    }
}