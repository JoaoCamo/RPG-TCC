{
  "format": {
    "type": "json_schema",
    "name": "weapon",
    "strict": true,
    "schema": {
      "type": "object",
      "properties": {
        "itemData": {
          "type": "object",
          "properties": {
            "itemType": { "type": "integer", "const": 1 },
            "rawDamage": { "type": "integer" },
            "dicesToRoll": { "type": "integer" },
            "modifierStat": {
              "type": "integer",
              "enum": [0, 1, 2, 3, 4, 5],
              "description": "Enum index of StatsType (0=Strength, 1=Dexterity, 2=Constitution, 3=Intelligence, 4=Wisdom, 5=Charisma)"
            }
          },
          "required": ["itemType", "rawDamage", "dicesToRoll", "modifierStat"],
          "additionalProperties": false
        },
        "itemName": { "type": "string" },
        "itemDescription": { "type": "string" },
        "itemWeight": { "type": "integer" },
        "itemValue": { "type": "integer" },
        "itemRarity": { "type": "integer", "enum": [0, 1, 2, 3, 4] }
      },
      "required": [
        "itemData",
        "itemName",
        "itemDescription",
        "itemWeight",
        "itemValue",
        "itemRarity"
      ],
      "additionalProperties": false
    }
  }
}